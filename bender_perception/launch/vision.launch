<launch>

    <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" required="true" output="screen" >
        <param name="video_device" value="/dev/video0" />
        <param name="image_width" value="640" />
        <param name="image_height" value="480" />
        <param name="pixel_format" value="yuyv" />
        <param name="camera_frame_id" value="bender_camera" />
        <param name="io_method" value="mmap"/>
    </node>

	<node name="bender_perception" pkg="bender_perception" type="bender_perception" required="true" output="screen">
        <remap to="/usb_cam/image_raw" from="/bender_camera/image_raw" />
        <param name="publish_rate" value="5" />     <!-- default = 10 -->
        <param name="scale" value="0.5" />          <!-- default = 1.0 -->
        <param name="num_colors" value="2" />       <!-- default = 2 -->
	</node>

     <node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
        <remap from="image" to="/bender_perception/image_quantized"/>
        <param name="autosize" value="true" />
    </node>


</launch>